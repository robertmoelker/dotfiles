# Setup easier `sail` command for Laravel projects
alias sail='[ -f sail ] && sh sail || sh vendor/bin/sail'

alias t="toggl"
alias cat="batcat"
alias g="lazygit"

timer() {
  if [ "$1" = "stop" ]; then
    toggl stop
  else
    toggl start $1  # start timer with message
  fi

  toggl.sh        # update the glaze-wm.
}

